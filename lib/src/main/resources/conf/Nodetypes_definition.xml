<nodeTypes xmlns:nt="http://www.jcp.org/jcr/nt/1.5" xmlns:mix="http://www.jcp.org/jcr/mix/1.5"
           xmlns:jcr="http://www.jcp.org/jcr/1.5">

    <nodeType name="exo:project" isMixin="false" hasOrderableChildNodes="false">
        <supertypes>
            <supertype>nt:base</supertype>
        </supertypes>
        <propertyDefinitions>
            <propertyDefinition name="idProject" requiredType="Long" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
            <propertyDefinition name="nameProject" requiredType="String" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
            <propertyDefinition name="owner" requiredType="String" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
            <propertyDefinition name="desc" requiredType="String" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
        </propertyDefinitions>
        <childNodeDefinitions>
            <childNodeDefinition name="tasksList" defaultPrimaryType="" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" sameNameSiblings="false">
                <requiredPrimaryTypes>
                    <requiredPrimaryType>exo:task</requiredPrimaryType>
                </requiredPrimaryTypes>
            </childNodeDefinition>
        </childNodeDefinitions>
    </nodeType>

    <nodeType name="exo:task" isMixin="false" hasOrderableChildNodes="false">
        <supertypes>
            <supertype>nt:base</supertype>
        </supertypes>
        <propertyDefinitions>
            <propertyDefinition name="idTask" requiredType="Long" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
            <propertyDefinition name="taskName" requiredType="String" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
            <propertyDefinition name="taskDescription" requiredType="String" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
            <propertyDefinition name="complexity" requiredType="String" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
            <propertyDefinition name="creationDate" requiredType="String" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
            <propertyDefinition name="startDate" requiredType="String" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
            <propertyDefinition name="completionDate" requiredType="String" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
            <propertyDefinition name="state" requiredType="String" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
                <valueConstraints/>
            </propertyDefinition>
        </propertyDefinitions>
    </nodeType>
</nodeTypes>


